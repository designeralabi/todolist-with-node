<body>

    <div class="box" id="heading"> 
        <h1>Today is <%= kindOfDay %> </h1>
    </div>

    <div class="box">
            <% for( var i = 0; i < newListItems.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= newListItems[i] %> </p>
                </div> 
            <% } %> 

        <form action="/" class="item" method="post">
            <input type="text" placeholder="new items" name="newItem" autocomplete="off">
            <button type="submit" name="button">+</button>
        </form>
        
    </div>
